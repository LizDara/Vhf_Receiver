<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="VhfReceiver.Widgets.IDAudio">

    <StackLayout
        Orientation="Vertical"
        Spacing="0">

        <StackLayout
            HeightRequest="1"
            BackgroundColor="{StaticResource light_gray}"
            HorizontalOptions="Fill"/>

        <StackLayout
            Orientation="Horizontal"
            Spacing="0"
            Padding="16">

            <StackLayout
                Orientation="Vertical"
                Spacing="0">

                <Label
                    Text="ID Audio"
                    TextColor="{StaticResource limed_spruce}"
                    FontSize="12"
                    Margin="0, 0, 0, 16"/>

                <Label
                    x:Name="Audio"
                    Text="All"
                    TextColor="{StaticResource ebony_clay}"
                    FontSize="20"
                    VerticalOptions="CenterAndExpand"
                    Margin="8, 0"/>

            </StackLayout>

            <Label
                Text="Edit Audio Options"
                FontSize="12"
                TextColor="{StaticResource limed_spruce}"
                FontAttributes="Bold"
                TextDecorations="Underline"
                HorizontalOptions="EndAndExpand"
                VerticalOptions="CenterAndExpand">

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="EditAudio_Tapped"/>
                </Label.GestureRecognizers>

            </Label>

        </StackLayout>

    </StackLayout>

</ContentView>
