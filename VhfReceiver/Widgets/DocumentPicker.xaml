<?xml version="1.0" encoding="UTF-8" ?>
<rg:PopupPage
    xmlns:rg="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="VhfReceiver.Widgets.DocumentPicker">

    <Grid>
        <StackLayout
            Orientation="Vertical"
            Spacing="8"
            Padding="16"
            Margin="24"
            VerticalOptions="Center"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="{StaticResource slate_300}">

            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center">

                <Label
                    Text="Select a File"
                    TextColor="{StaticResource black}"
                    FontSize="16"
                    VerticalOptions="Center"/>

                <ImageButton
                    Clicked="Close_Clicked"
                    Source="Exit"
                    HorizontalOptions="EndAndExpand"/>

            </StackLayout>

            <Label
                x:Name="NoFiles"
                VerticalOptions="CenterAndExpand"
                Margin="0, 48"
                TextColor="{StaticResource limed_spruce}"
                FontSize="14"/>

            <ListView
                x:Name="FilesList"
                ItemTapped="FilesList_Tapped"
                HeightRequest="300"
                SeparatorColor="{StaticResource slate_300}"
                BackgroundColor="{StaticResource slate_300}"
                SeparatorVisibility="Default">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout
                                Orientation="Horizontal"
                                Spacing="8"
                                Padding="16"
                                BackgroundColor="{StaticResource catskill_white}"
                                VerticalOptions="Center">

                                <Image
                                    Source="SelectedFile"/>

                                <Label
                                    Text="{Binding FileName}"
                                    TextColor="{StaticResource ebony_clay}"
                                    FontSize="12"/>

                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>
    </Grid>

</rg:PopupPage>
