<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="VhfReceiver.Widgets.MobileSetting">

    <StackLayout
        Orientation="Vertical"
        Spacing="0"
        BackgroundColor="{StaticResource catskill_white}"
        Margin="16, 12">

        <StackLayout
            Orientation="Horizontal"
            VerticalOptions="Center"
            Spacing="0"
            Padding="16">

            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="FrequencyTableNumber_Tapped"/>
            </StackLayout.GestureRecognizers>

            <StackLayout
                Orientation="Vertical"
                Spacing="0"
                HorizontalOptions="StartAndExpand">

                <Label
                    Text="Scan Table"
                    TextColor="{StaticResource limed_spruce}"
                    FontSize="12"
                    Margin="0, 0, 0, 8"/>

                <Label
                    x:Name="FrequencyTableNumber"
                    TextColor="{StaticResource ebony_clay}"
                    FontSize="16"/>

            </StackLayout>

            <Image
                Source="Next"/>

        </StackLayout>

        <StackLayout
            HeightRequest="1"
            BackgroundColor="{StaticResource light_gray}"
            HorizontalOptions="Fill"/>

        <StackLayout
            Orientation="Horizontal"
            VerticalOptions="Center"
            Spacing="0"
            Padding="16">

            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="ScanTime_Tapped"/>
            </StackLayout.GestureRecognizers>

            <StackLayout
                Orientation="Vertical"
                Spacing="0"
                HorizontalOptions="StartAndExpand">

                <Label
                    Text="Scan Rate"
                    TextColor="{StaticResource limed_spruce}"
                    FontSize="12"
                    Margin="0, 0, 0, 8"/>

                <Label
                    x:Name="ScanTime"
                    TextColor="{StaticResource ebony_clay}"
                    FontSize="16"/>

            </StackLayout>

            <Image
                Source="Next"/>

        </StackLayout>

        <StackLayout
            HeightRequest="1"
            BackgroundColor="{StaticResource light_gray}"
            HorizontalOptions="Fill"/>

        <StackLayout
            Orientation="Horizontal"
            VerticalOptions="Center"
            Spacing="0"
            Padding="16">

            <Label
                Text="GPS"
                TextColor="{StaticResource limed_spruce}"
                FontSize="12"
                Margin="0, 0, 0, 8"
                HorizontalOptions="StartAndExpand"
                VerticalTextAlignment="Center"/>

            <Switch
                x:Name="GPS"
                OnColor="{StaticResource humming_bird}"
                Toggled="Gps_Toggled">

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="On">
                            <VisualState.Setters>
                                <Setter
                                    Property="ThumbColor"
                                    Value="#147D64"/>
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Off">
                            <VisualState.Setters>
                                <Setter
                                    Property="ThumbColor"
                                    Value="#7B8794"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

            </Switch>

        </StackLayout>

        <StackLayout
            HeightRequest="1"
            BackgroundColor="{StaticResource light_gray}"
            HorizontalOptions="Fill"/>

        <StackLayout
            Orientation="Horizontal"
            VerticalOptions="Center"
            Spacing="0"
            Padding="16">

            <Label
                Text="Auto Record"
                TextColor="{StaticResource limed_spruce}"
                FontSize="12"
                Margin="0, 0, 0, 8"
                HorizontalOptions="StartAndExpand"
                VerticalTextAlignment="Center"/>

            <Switch
                x:Name="AutoRecord"
                OnColor="{StaticResource humming_bird}"
                Toggled="AutoRecord_Toggled">

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="On">
                            <VisualState.Setters>
                                <Setter
                                    Property="ThumbColor"
                                    Value="#147D64"/>
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Off">
                            <VisualState.Setters>
                                <Setter
                                    Property="ThumbColor"
                                    Value="#7B8794"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

            </Switch>

        </StackLayout>

    </StackLayout>

</ContentView>
