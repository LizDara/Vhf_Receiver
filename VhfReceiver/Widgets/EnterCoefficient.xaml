<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="VhfReceiver.Widgets.EnterCoefficient">
    <StackLayout
        Spacing="0"
        Margin="16, 24"
        Padding="16, 24"
        VerticalOptions="FillAndExpand"
        BackgroundColor="{StaticResource catskill_white}"
        Orientation="Vertical">

        <Label
            x:Name="NewCoefficient"
            FontSize="20"
            FontAttributes="Bold"
            HorizontalOptions="CenterAndExpand"
            Margin="24, 0, 24, 8"/>

        <StackLayout
            x:Name="Line"
            HeightRequest="1"
            BackgroundColor="{StaticResource ghost}"
            HorizontalOptions="FillAndExpand"
            Margin="24, 0, 24, 8"/>

        <Grid
            ColumnDefinitions="4"
            RowDefinitions="3"
            ColumnSpacing="16"
            RowSpacing="16"
            Margin="4, 0, 24, 0">

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="+ / -"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="1"
                Grid.Row="1"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="1"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="2"
                Grid.Row="1"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="2"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="3"
                Grid.Row="1"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="3"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="4"
                Grid.Row="1"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="4"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="1"
                Grid.Row="2"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="5"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="2"
                Grid.Row="2"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="6"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="3"
                Grid.Row="2"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="7"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="4"
                Grid.Row="2"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="8"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="1"
                Grid.Row="3"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="9"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="2"
                Grid.Row="3"/>

            <Button
                Clicked="Number_Clicked"
                HeightRequest="32"
                Text="0"
                FontAttributes="Bold"
                TextColor="{StaticResource ebony_clay}"
                FontSize="16"
                BorderColor="{StaticResource ghost}"
                BorderWidth="1"
                CornerRadius="15"
                Grid.Column="3"
                Grid.Row="3"/>

            <ImageButton
                Clicked="Delete_Clicked"
                HeightRequest="32"
                Source="Delete"
                CornerRadius="15"
                BackgroundColor="{StaticResource tall_poppy}"
                Padding="0, 6"
                Grid.Column="4"
                Grid.Row="3"/>

        </Grid>

    </StackLayout>
</ContentView>
