<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="VhfReceiver.Pages.TablesPage"
    xmlns:common="clr-namespace:VhfReceiver.Widgets;assembly=VhfReceiver"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False"
    BackgroundColor="{StaticResource slate_300}">
    <ContentPage.Content>
        <Grid>
            <StackLayout
                Orientation="Vertical"
                VerticalOptions="Fill"
                Spacing="0">

                <common:Toolbar
                    x:Name="Toolbar"/>

                <Label
                    Text="Select a Table"
                    TextColor="{StaticResource black}"
                    FontSize="20"
                    Margin="16, 24, 16, 16"/>

                <ListView
                    x:Name="TablesList"
                    ItemTapped="TablesList_Tapped"
                    BackgroundColor="{StaticResource slate_300}"
                    SeparatorVisibility="None"
                    RowHeight="90">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout
                                    Orientation="Horizontal"
                                    Spacing="0"
                                    Padding="16"
                                    Margin="16, 0, 16, 16"
                                    BackgroundColor="{StaticResource catskill_white}">

                                    <StackLayout
                                        Orientation="Vertical"
                                        Spacing="0"
                                        HorizontalOptions="StartAndExpand">

                                        <Label
                                            Text="{Binding TableNumber}"
                                            TextColor="{StaticResource limed_spruce}"
                                            FontSize="12"
                                            Margin="0, 0, 0, 8"/>

                                        <Label
                                            Text="{Binding FrequencyNumber}"
                                            TextColor="{StaticResource ebony_clay}"
                                            FontSize="16"/>

                                    </StackLayout>

                                    <Image
                                        Source="Next"/>

                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

                <Button
                    Clicked="LoadFromFile_Clicked"
                    Text="Load Frequencies From File"
                    TextColor="{StaticResource limed_spruce}"
                    FontSize="16"
                    VerticalOptions="EndAndExpand"
                    FontAttributes="Bold"
                    BackgroundColor="{StaticResource slate_300}"
                    BorderColor="{StaticResource limed_spruce}"
                    BorderWidth="1"
                    CornerRadius="4"
                    Margin="16, 8, 16, 16"/>

                <common:VhfReceiverStatus
                    x:Name="ReceiverStatus"/>

            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>
